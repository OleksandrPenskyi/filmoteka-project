<div class="backdpor">
    <div class="modal">
        <!-- часть с картинкой -->
        <div class="poster">
            <img class="poster-image" src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt="#" width="396"
                height="478" />
        </div>

        <!-- часть с описанием фильма-->
        <div class="description">
            {{!-- название фильма --}}
            <h2 class="description-title">{{original_title}}</h2>

            <div class="description-wrapper">
                {{!-- название заголовков --}}
                <ul class="description-list">
                    <li class="description-item">Vote / Votes</li>
                    <li class="description-item">Popularity</li>
                    <li class="description-item">Original Title</li>
                    <li class="description-item">Genre</li>
                </ul>

                {{!-- значение заголовков --}}
                <ul class="value-list">
                    <li class="value-item">
                        <span class="value-item rating">{{vote_average}}</span> / {{vote_count}}
                    </li>
                    <li class="value-item">{{popularity}}</li>
                    <li class="value-item title">{{original_title}}</li>
                    <li class="value-item">
                        {{#each genres}}
                        <p class="value-item genres">{{name}}</p>
                        {{/each}}
                    </li>
                </ul>
            </div>

            <h3 class="about-title">about</h3>
            <p class="about-desription">
                {{overview}}
            </p>

            <button class="watchedBtn btn--active" type="button">
                add to Watched
            </button>

            <button class="queueBtn btn--active" type="button">
                add to queue
            </button>
        </div>

        <!-- часть с описанием фильма. Правая часть-->

        <!--  кнопка закрытия модалки -->
        <svg class='close-icon' width="30" height="30" xmlns="http://www.w3.org/2000/svg">
            <path d="M8 8l14 14M8 22L22 8" stroke="#000" stroke-width="2" />
        </svg>
    </div>
</div>